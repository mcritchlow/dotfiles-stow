# vim: set ft=conf:

# Read `man 5 sway` for a complete reference.
### Variables
# Path to local bin files
set $local_bin /home/mcritchlow/.local/bin
set $wallpaper /home/mcritchlow/Pictures/background.jpg

# Logo key. Use Mod1 for Alt.
# Logo key. Use Mod4 for Super.
set $mod Mod4

# Application defaults
set $term foot
set $rofi_cmd rofi -terminal '$term'
set $menu $rofi_cmd -show combi -combi-modes drun#run -modes combi

include '$($LIBEXECDIR/sway/layered-include "$DATADIR/sway/config.d/*.conf" "$SYSCONFDIR/sway/config.d/*.conf" "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf")'
